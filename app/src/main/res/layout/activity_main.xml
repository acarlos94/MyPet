<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_tela"
    tools:context="banzoprojects.com.pet.usuario.gui.MainActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/branco"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvBemVindo"/>

    <ListView
        android:id="@+id/listaAnimais"
        android:layout_width="wrap_content"
        android:background="@drawable/fundo_tela"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/btnCadastrarAnimal"
        android:layout_below="@+id/tvBemVindo">
    </ListView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btnCadastrarAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Animal"
        android:onClick="onButtonClickCadastrarAnimal"
        android:layout_above="@+id/btnLogout"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meus Pets"
        android:textColor="@color/branco"
        android:id="@+id/textView"
        android:layout_below="@+id/tvBemVindo"
        android:layout_alignStart="@+id/tvBemVindo" />




</RelativeLayout>


