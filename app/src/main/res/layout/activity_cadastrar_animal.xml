<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro_animal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_tela"
    android:orientation="vertical"
    tools:context="banzoprojects.com.pet.animal.gui.CadastrarAnimalActivity"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="12dp"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:id="@+id/etNomeAnimal"
        android:layout_below="@+id/etNomeAnimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Animal"
        android:textSize="15dp"/>

    <Spinner

        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTipoAnimal"
        android:layout_weight="0.12" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RaÃ§a"
        android:textSize="15dp"/>

    <Spinner

        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerRaca"
        android:layout_weight="0.12" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sexo"
        android:textSize="15dp"/>

    <Spinner

        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTipo"
        android:layout_weight="0.12"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Altura"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="12dp"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:id="@+id/etAlturaAnimal"
        android:layout_below="@+id/etSexoAnimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp" />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Cor"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="12dp"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:id="@+id/etCorAnimal"
        android:layout_below="@+id/edtPesoAnimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Peso"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="12dp"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:id="@+id/etPesoAnimal"
        android:layout_below="@+id/etNomeAnimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nascimento"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="12dp"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:id="@+id/etNascimentoAnimal"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/editText9"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSalvarAnimal"
        android:text="Salvar Animal"
        android:background="@drawable/fundo_botao"
        android:onClick="onButtonClickSalvarAnimal"
        android:textSize="13sp"
        android:layout_marginTop="21dp" />


</LinearLayout>



